<Window x:Class="Visual_Blockchain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual_Blockchain"
        mc:Ignorable="d"
        Title="Visual Blockchain" Height="377" Width="755">
    <Grid Margin="0,0,0,3">
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Add Block" Click="AddBlock_Click"/>
                <MenuItem Header="_Add Five Blocks" Click="AddFiveBlocks_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" Margin="1,10,10,0">
            <StackPanel Name="stkBlocks" Width="9000" CanHorizontallyScroll="True" Orientation="Horizontal" >
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
